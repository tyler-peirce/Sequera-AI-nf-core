{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/oceangenomesdraftgenomes/master/assets/schema_input.json",
    "title": "nf-core/oceangenomesdraftgenomes pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
            },
            "run": {
                "type": "string"
            },
            "buscodb": {
                "type": "string",
                "description": "The BUSCO lineage dataset to use (e.g., actinopterygii or vertebrate)",
                "enum": ["actinopterygii", "vertebrate"],
                "errorMessage": "must be  either 'actinopterygii' or 'vertebrate'"
            },
            "species": {
                "type": "string"
            },
            "taxonid": {
                "type": "integer"
            }
        },
        "required": ["sample", "species", "taxonid"]
    }
}
